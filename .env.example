# 🔑 Django secret key for cryptographic signing - Used for session management and CSRF protection
DJANGO_SECRET_KEY=secret-key

# 🌍 Environment setting - Controls application behavior and configuration
DJANGO_ENV=development

# 🐛 Debug mode flag - Enables detailed error pages and debugging tools
DJANGO_DEBUG=True

# 💾 Database configuration - PostgreSQL connection settings
DJANGO_DB=db-example
POSTGRES_DB=db-example          # Database name
POSTGRES_USER=db-example       # Database user
POSTGRES_PASSWORD=db-example   # Database password

# 📦 Redis cache configuration - Used for caching and session storage
# Format: redis://hostname:port/db-number
REDIS_URL=redis://redis:6379/0
